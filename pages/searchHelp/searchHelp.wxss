page {
  display: flex;
  min-height: 100%;
  flex-direction: column;
  flex: 1
}
.search-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  flex: 1;
  background-color: #f1f1f1
}
.search-container view {
  display: flex
}
.search-header {
  width: 750rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  background: #FFFFFF;
}
.search-box {
  width: 690rpx;
  height: 80rpx;
  border-radius: 10rpx;
  padding: 0 20rpx;
  background-color: #f1f1f1;
  color: #555555;
  align-items: center;
  justify-content: space-between;
}
.search-input {
  width: 600rpx;
  height: 80rpx;
}
.search-text {
  width: 130rpx;
  text-align: center;
  font-size: 30rpx;
  color: #555555
}
.search-body {
  display: flex;
  flex-direction: column;
  flex: 1;
  width: 100%;
  align-items: center;
  margin-top: 30rpx;
  
}

.search-item {
  width: 700rpx;
  height: 200rpx;
  background-color: #FFFFFF;
  color: #666666;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.search-item-top {
  width: 100%;
  height: 120rpx;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  font-size: 32rpx;
}
.search-icon {
  width: 30rpx;
  height: 30rpx;
}
.sub-box {
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  color: #999999
}
.sub-icon {
  width: 36rpx;
  height: 36rpx;
}
.search-item-bottom {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  align-items: center;
}
.search-item-desc {
  height: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}